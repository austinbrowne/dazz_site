---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" noIndex={true}>
  <div class="max-w-2xl mx-auto px-4 py-32 text-center">
    <h1 class="text-6xl font-bold text-zinc-600 mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-white mb-4">Page not found</h2>
    <p class="text-zinc-400 mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/" class="px-6 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-medium rounded-lg transition-colors">
        Go Home
      </a>
      <a href="/picks" class="px-6 py-2 bg-zinc-800 hover:bg-zinc-700 text-white text-sm font-medium rounded-lg transition-colors border border-zinc-700">
        See My Picks
      </a>
      <a href="/reviews" class="px-6 py-2 bg-zinc-800 hover:bg-zinc-700 text-white text-sm font-medium rounded-lg transition-colors border border-zinc-700">
        Browse Reviews
      </a>
    </div>
  </div>
</BaseLayout>
